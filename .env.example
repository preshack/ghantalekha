# WorkClock Configuration
# Copy this file to .env and fill in the values

# Flask
FLASK_ENV=production
SECRET_KEY=change-me-to-a-random-secret-key-at-least-32-chars

# Database
DATABASE_URL=postgresql://workclock:workclock_password@db:5432/workclock
POSTGRES_PASSWORD=workclock_password

# Redis
REDIS_URL=redis://redis:6379/0

# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_DEFAULT_SENDER=noreply@workclock.com

# Manager notification email (fallback if no manager in DB)
MANAGER_EMAIL=manager@workclock.com

# Overtime threshold (hours per month)
OVERTIME_MONTHLY_THRESHOLD=160

# Rate limiting
RATELIMIT_STORAGE_URI=redis://redis:6379/1
